<% @apps.each do |app| %>

  <div class="app-thumb">
    <%= image_tag("#{app.thumb}") %>
    <%= link_to app.path do %>
      <h2><%= app.title %></h2>
    <% end %>
    <p><%= app.language %></p>
    <%= link_to "github", app.github, class: "github-link" %>
  </div>
  <div class="app-description">
    <p><%= app.description %> </p><br />
  </div>

<% end %>
